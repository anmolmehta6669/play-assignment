# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /signup                     controllers.HomeController.signUp

GET     /signin                     controllers.HomeController.signIn


POST    /addAccount                 controllers.SignUp.addAccount

GET     /profile                     controllers.ProfileController.profile

POST    /login                      controllers.SignIn.checkUser

GET     /logout                     controllers.ProfileController.logout

GET     /changePassword             controllers.ProfileController.changePassword

GET     /changeDetails              controllers.ProfileController.changeDetails

GET     /manage                     controllers.ProfileController.manageUsers

GET     /disable                    controllers.ProfileController.disable(email:String)

GET     /enable                     controllers.ProfileController.enable(email:String)


